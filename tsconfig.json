{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "target": "es2015",
    "strict": true,
    "outDir": "./lib",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts",
    "src/__mocks__/**",
    "lib",
  ]
}